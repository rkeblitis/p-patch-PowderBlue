<%= form_for Comment.new , url: comment_form_path(@post.id) do |f| %>
<%= f.label "Make a Comment" %>
<%= f.text_area :comment, class:"form-control", placeholder:"Comment" %><br>
<%= f.hidden_field :post_id, value: params["id"]  %>
<%= f.submit "Submit", :class => "btn btn-default" %>
<%end %>


