<%= form_for(@event, html: { class: "form2"}, :url => { :action => "update" }) do |f| %>
  <%= f.label "Event name:" %><br>
  <%= f.text_field :name %><br><br>
  <%= f.label "Date + time:" %><br>
  <%= f.datetime_select "datetime" %><br><br>
  <%= f.label :category %>:<br>
  <% @categories.each do |category| %>
    <%= check_box_tag "event[category_ids][]", category.id, @event.categories.include?(category) %>
    <%= category.name %><br><br>
  <% end %>
  <%= f.label "Description:" %><br>
  <%= f.text_area :description %><br>
  <%= f.hidden_field :user_id, :value => current_user.id %><br><br>
  <%= f.submit "Edit event", :class => "btn btn-default" %>
<% end %>
