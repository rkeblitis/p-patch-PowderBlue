<%= form_for(@event, html: { class: "form2"}) do |f| %>
  <%= f.label "Event name:" %><br>
  <%= f.text_field :name %><br>
  <%= f.label "Date:" %><br>
  <%= f.date_select "date" %><br>
  <%= f.label :category %>:<br>
  <% @categories.each do |category| %>
    <%= check_box_tag "event[category_ids][]", category.id, @event.categories.include?(category) %>
    <%= category.name %><br>
  <% end %>
  <%= f.label "Description:" %><br>
  <%= f.text_area :description %><br>
  <%= f.hidden_field :user_id, :value => current_user.id %><br><br>
  <%= f.submit "Create event", :class => "btn btn-default" %>
<% end %>
